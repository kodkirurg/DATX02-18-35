<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/DarkCyan"

    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:layout_margin="10dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            >


            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/popup_exit_button"
                android:background="@color/Black"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:elevation="1dp"
                android:src="@drawable/exit"

                />


            <TextView
                android:id="@+id/popup_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/popup_exit_button"
                android:layout_centerHorizontal="true"
                android:textColor="@color/White"
                android:text="Goal"
                android:textSize="24sp" />


            <include
                layout="@layout/card_expression"
                android:layout_width="120dp"
                android:layout_height="170dp"
                android:layout_below="@id/popup_goal"
                android:layout_centerHorizontal="true"
                android:id="@+id/popup_goalCard"
                />


            <TextView
                android:id="@+id/popup_level_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/popup_goalCard"
                android:layout_centerHorizontal="true"
                android:textColor="@color/White"
                android:text="@string/undefined"
                android:textAlignment="center"
                android:textSize="18sp"
                android:layout_margin="5dp"/>

        </RelativeLayout>

    </ScrollView>


</android.support.v7.widget.CardView>