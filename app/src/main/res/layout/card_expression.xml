<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:layout_margin="5dp"
    android:layout_centerInParent="true"
    app:cardElevation="20dp"

    >

    <FrameLayout
        android:id="@+id/card_frame_middle"
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="2dp"
        android:background="@color/Blue">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/card_image_middle"
            />

    </FrameLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_card_1"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_gravity="top"
        android:layout_margin="2dp"

        app:cardBackgroundColor="@color/Yellow">


        <android.support.v7.widget.CardView
            android:id="@+id/card_card_1_2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|start"
            android:layout_margin="1dp">

            <ImageView
                android:id="@+id/card_image_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"

                 />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_card_1_1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="1dp">

            <ImageView
                android:id="@+id/card_image_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
               />

        </android.support.v7.widget.CardView>


        <FrameLayout
            android:id="@+id/card_frame_upper"
            android:layout_width="11dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/Green">

            <ImageView
                android:id="@+id/card_image_upper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                />
        </FrameLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_card_2"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_gravity="bottom"
        android:layout_margin="2dp"
        app:cardBackgroundColor="@color/Yellow">

        <FrameLayout
            android:id="@+id/card_frame_lower"
            android:layout_width="11dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/Green">

            <ImageView
                android:id="@+id/card_image_lower"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/card_card_2_3"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|start"
            android:layout_margin="1dp">

            <ImageView
                android:id="@+id/card_image_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_card_2_4"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="1dp">

            <ImageView
                android:id="@+id/card_image_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
               />

        </android.support.v7.widget.CardView>


    </android.support.v7.widget.CardView>

</android.support.v7.widget.CardView>