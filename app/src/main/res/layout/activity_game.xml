<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp"
    >

    <include
        android:id="@+id/topPanel"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:id="@+id/game_board_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topPanel"
        android:orientation="horizontal">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/game_right_side"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="@color/WhiteSmoke"
            android:layout_alignParentRight="true"

            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/game_left_side"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="@color/WhiteSmoke"
            android:layout_alignParentLeft="true"



            />
    </RelativeLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/inventory_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
      >
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/victory_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:visibility="visible"
        android:background="@color/GhostWhite"


        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            >
            <TextView
                android:id="@+id/win_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You completed the level. Good job!"
                android:background="@color/White"
                android:layout_centerHorizontal="true"

                />
            <TextView
                android:id="@+id/win_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/White"
                android:layout_below="@+id/win_textview"
            />
            <Button
                android:id="@+id/next_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/win_score"
                android:text="Next Level"
            />

            <Button
                android:id="@+id/main_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/next_level"
                android:text="Main Menu"
                />


        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>