<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main"
    android:background="@color/colorPrimary"
    >


    <android.support.constraint.Guideline
        android:id="@+id/main_guideline1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />
    <android.support.constraint.Guideline
        android:id="@+id/main_guideline2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />
    <android.support.constraint.Guideline
        android:id="@+id/main_guideline3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />
    <android.support.constraint.Guideline
        android:id="@+id/main_guideline4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />
    <android.support.constraint.Guideline
        android:id="@+id/main_guideline5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.67" />

    <android.support.constraint.Guideline
        android:id="@+id/main_buttonsLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />
    <android.support.constraint.Guideline
        android:id="@+id/main_buttonsRight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />


    <ImageView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:elevation="10dp"
        android:src="@drawable/title_big_shadow"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_guideline1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <Button
        android:id="@+id/start_button"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:text="Start"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffd966"
        android:textAllCaps="false"
        android:layout_marginBottom="15dp"
        android:textSize="30sp"
        android:textAlignment="center"

        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeStepGranularity="2sp"

        app:layout_constraintTop_toBottomOf="@id/main_guideline2"
        app:layout_constraintBottom_toTopOf="@id/main_guideline3"
        app:layout_constraintRight_toRightOf="@id/main_buttonsRight"
        app:layout_constraintLeft_toLeftOf="@id/main_buttonsLeft"


        tools:targetApi="o">


    </Button>

    <Button
        android:id="@+id/quit_button"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_below="@+id/start_button"
        android:text="Quit"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffd966"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        android:textSize="30sp"
        android:textAlignment="center"

        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeStepGranularity="2sp"


        app:layout_constraintTop_toBottomOf="@id/main_guideline3"
        app:layout_constraintBottom_toTopOf="@id/main_guideline4"
        app:layout_constraintRight_toRightOf="@id/main_buttonsRight"
        app:layout_constraintLeft_toLeftOf="@id/main_buttonsLeft"


        tools:targetApi="o">

    </Button>


    <ImageView
        android:id="@+id/card_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="10dp"
        android:src="@drawable/game_icon_fixed"

        app:layout_constraintTop_toBottomOf="@id/main_guideline5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />




</android.support.constraint.ConstraintLayout>
