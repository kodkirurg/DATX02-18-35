<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_centerInParent="true"
    app:cardElevation="20dp"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <android.support.constraint.Guideline
            android:id="@+id/card_expression_guideline_vertical_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6" />

        <android.support.constraint.Guideline
            android:id="@+id/card_expression_guideline_vertical_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4" />

        <android.support.constraint.Guideline
            android:id="@+id/card_expression_guideline_horizontal_upper"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />

        <android.support.constraint.Guideline
            android:id="@+id/card_expression_guideline_horizontal_lower"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6" />


        <ImageView
            android:id="@+id/card_expression_quadrant1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:visibility="invisible"

            app:layout_constraintLeft_toRightOf="@id/card_expression_guideline_vertical_right"
            app:layout_constraintBottom_toTopOf="@id/card_expression_guideline_horizontal_upper"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            />

        <ImageView
            android:id="@+id/card_expression_quadrant2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:visibility="invisible"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/card_expression_guideline_horizontal_upper"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/card_expression_guideline_vertical_left"

            />

        <ImageView
            android:id="@+id/card_expression_quadrant3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:visibility="invisible"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@id/card_expression_guideline_horizontal_lower"
            app:layout_constraintRight_toLeftOf="@id/card_expression_guideline_vertical_left"

            />

        <ImageView
            android:id="@+id/card_expression_quadrant4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:visibility="invisible"

            app:layout_constraintLeft_toLeftOf="@id/card_expression_guideline_vertical_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@id/card_expression_guideline_horizontal_lower"
            app:layout_constraintRight_toRightOf="parent"

            />

        <ImageView
            android:id="@+id/card_expression_quadrant12"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:layout_margin="4dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/card_expression_guideline_horizontal_upper"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            />

        <ImageView
            android:id="@+id/card_expression_quadrant34"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:layout_margin="4dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@id/card_expression_guideline_horizontal_lower"
            app:layout_constraintRight_toRightOf="parent"

            />

        <ImageView
            android:id="@+id/card_expression_quadrant1234"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:layout_margin="4dp"


            />

        <ImageView
            android:id="@+id/card_expression_top_mid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:visibility="invisible"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/card_expression_guideline_horizontal_upper"
            app:layout_constraintRight_toRightOf="@id/card_expression_guideline_vertical_right"
            app:layout_constraintLeft_toLeftOf="@id/card_expression_guideline_vertical_left"

            />

        <ImageView
            android:id="@+id/card_expression_mid_mid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:visibility="invisible"

            app:layout_constraintTop_toTopOf="@id/card_expression_guideline_horizontal_upper"
            app:layout_constraintBottom_toBottomOf="@id/card_expression_guideline_horizontal_lower"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            />

        <ImageView
            android:id="@+id/card_expression_lower_mid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:visibility="invisible"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/card_expression_guideline_vertical_left"
            app:layout_constraintTop_toBottomOf="@id/card_expression_guideline_horizontal_lower"
            app:layout_constraintRight_toRightOf="@id/card_expression_guideline_vertical_right"

            />



    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>
